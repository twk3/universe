{
  "id": "{{gitlab-ce.name}}",
  "cpus": {{gitlab-ce.cpus}},
  "mem": {{gitlab-ce.mem}},
  "instances": 1,
  "env": {
      "GITLAB_OMNIBUS_CONFIG": "unicorn['worker_processes'] = 1;"
  },
  "container": {
       "type": "DOCKER",
       "docker": {
           "image": "{{resource.assets.container.docker.gitlab-ce}}",
           "network" : "BRIDGE",
           "portMappings": [
             { "hostPort": 0, "containerPort": 80, "protocol": "tcp" },
             { "hostPort": 0, "containerPort": 443, "protocol": "tcp" },
             { "hostPort": 0, "containerPort": 22, "protocol": "tcp" }
           ]
       },
       "volumes": [
           {
               "containerPath": "/etc/gitlab",
               "hostPath": "/srv/gitlab/config",
               "mode": "RW"
           },
           {
               "containerPath": "/var/log/gitlab",
               "hostPath": "/srv/gitlab/logs",
               "mode": "RW"
           },
           {
               "containerPath": "/var/opt/gitlab",
               "hostPath": "/srv/gitlab/data",
               "mode": "RW"
           }
       ]
   },
   "acceptedResourceRoles": [ "{{gitlab-ce.role}}" ],
  "healthChecks": [
    {
      "protocol": "COMMAND",
      "command": { "value": "curl --fail ${HOST}:${PORT0}/help" },
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3
    }
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{gitlab-ce.name}}"
  },
  "upgradeStrategy":{
    "minimumHealthCapacity": 0,
    "maximumOverCapacity": 0
  }
}
