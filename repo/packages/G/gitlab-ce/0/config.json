{
  "type": "object",
  "properties": {
    "gitlab-ce": {
      "description": "GitLab CE configuration properties",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of this DC/OS service.",
          "type": "string",
          "default": "gitlab-ce"
        },
        "cpus": {
            "description": "CPU shares to allocate to GitLab.",
            "type": "number",
            "default": 1.0,
            "minimum": 0.1
        },
        "mem": {
            "description": "Memory to allocate to GitLab.",
            "type": "number",
            "default": 1024.0,
            "minimum": 1024.0
        },
        "role": {
          "default": "*",
          "description": "Deploy GitLab only on nodes with this role.",
          "type": "string"
        },
        "virtual-host": {
            "description": "The virtual host address to configure for integration with Marathon-lb.",
            "type": "string"
        }
      },
      "required": [
        "name",
        "cpus",
        "mem"
      ]
    }
  },
  "required": [
    "gitlab-ce"
  ]
}
